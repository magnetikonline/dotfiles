[user]
	email = peter@magnetikonline.com.au
	name = Peter Mescalchin

[core]
	autocrlf = input
	excludesfile = ~/.gitignoreglobal
	pager = less -x4

[color]
	ui = true

[diff]
	tool = meld

[grep]
	extendedregexp = true
	linenumber = true

[push]
	default = simple

[alias]
	adda = add -u :/
	ba = branch -a
	da = difftool -d
	dac = difftool -d --cached
	lg = log --graph --pretty=format:'%C(red)%h%C(reset) - %s - %C(yellow)(%ar)%C(reset) <%an>'
	lt = ls-tree -r --abbrev=6 --full-tree HEAD
	mergenc = merge --no-commit --no-ff
	mergesq = merge --squash
	st = status -sb
