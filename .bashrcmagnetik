# ~/.bashrcmagnetik
# called from ~/.bashrc as [ . ~/.bashrcmagnetik ]


umask 022


# colored shell prompt with Git branch details
GIT_PS1_SHOWDIRTYSTATE=true
PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(__git_ps1 " \[\033[00;95m\](%s)\[\033[00m\]")\$ '


# application shortcuts
alias diff='colordiff'
alias docker='sudo docker.io'
alias m='meld'
alias n='nano'
alias s='subl'
alias tigs='tig status'


# utility commands
alias mag-findcrlf='grep -IlPrU "\r" .'

alias mag-fixfileperms='chmod -R a-rwx,a+rX,u+w . \
	&& find . -type f -name "*.sh" -print0 | xargs -0r chmod 0744 \
	&& find . -type f \( -name "id_rsa" -or -name "*.id_rsa" \) -print0 | xargs -0r chmod 0600'

alias mag-nukedockercontainers='docker ps -aq | xargs sudo docker rm'
alias mag-shutdown='sudo shutdown now -P'
alias mag-sysupdate='sudo apt-get update && sudo apt-get upgrade'
