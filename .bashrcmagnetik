# ~/.bashrcmagnetik
# called from ~/.bashrc as [ . ~/.bashrcmagnetik ]


umask 0022


# colored shell prompt including Git branch details
GIT_PS1_SHOWDIRTYSTATE="true"
PS1='${debian_chroot:+($debian_chroot)}\[\033[00;32m\]\u\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(__git_ps1 " \[\033[00;95m\](%s)\[\033[00m\]")\$ '


# set current working directory as xterm title
[[ $TERM -eq "xterm" ]] && PS1=$PS1'\[\033]0;\w\007\]'


# application shortcuts
alias diff='colordiff'
alias dockviz='docker run --rm --volume /var/run/docker.sock:/var/run/docker.sock nate/dockviz'
alias m='meld'
alias n='nano'
alias s='subl'
alias tigs='tig status'


# utility commands
alias mag-fixfileperms='chmod -R a-rwx,a+rX,u+w . \
	&& find . -type f -name "*.sh" -print0 | xargs -0r chmod 0744 \
	&& find . -type f \( -name "id_rsa" -or -name "*.id_rsa" \) -print0 | xargs -0r chmod 0600'

alias mag-dockernukecontainers='docker ps -qf "status=exited" | xargs -L 1 -r docker rm'
alias mag-dockernukeimagesuntagged='docker images -qf "dangling=true" | xargs -L 1 -r docker rmi'
alias mag-findcrlf='grep -IlPrUe "\r" .'
alias mag-shutdown='sudo shutdown now -P'
alias mag-sysupdate='sudo apt-get update && sudo apt-get upgrade'
